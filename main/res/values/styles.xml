<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@drawable/title_background</item>
    </style>

    <style name="CustomWindowTitleStyle">
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="AvtopoiskTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@drawable/bitmap_background</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/CustomWindowTitleStyle</item>
        <item name="android:windowTitleSize">30dip</item>
    </style>

</resources>