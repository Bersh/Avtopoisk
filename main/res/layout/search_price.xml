<?xml version="1.0" encoding="utf-8"?>

<!--price spinners and hints-->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/price_from_hint"
              android:textColor="#000"
              android:paddingRight="5dip"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true"
              android:text="@string/from_hint"/>

    <Spinner
            android:id="@+id/price_from"
            android:layout_width="115dip"
            android:layout_toRightOf="@+id/price_from_hint"
            android:gravity="center"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/price_to_hint"
              android:paddingRight="5dip"
              android:textColor="#000"
              android:layout_centerVertical="true"
              android:layout_toLeftOf="@+id/price_to"
              android:text="@string/to_hint"/>
    <Spinner
            android:id="@+id/price_to"
            android:layout_alignParentRight="true"
            android:layout_width="115dip"
            android:gravity="center"
            android:layout_height="wrap_content"/>
</RelativeLayout>