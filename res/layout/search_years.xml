<?xml version="1.0" encoding="utf-8"?>

<!--year spinners and hints-->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year_from_hint"
            android:textColor="#000"
            android:paddingRight="5dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/from_hint"/>

    <Spinner
            android:id="@+id/year_from"
            android:layout_width="@dimen/price_any_year_spinner_size"
            android:layout_toRightOf="@+id/year_from_hint"
            android:gravity="center"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year_to_hint"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:layout_toLeftOf="@+id/year_to"
            android:paddingRight="5dip"
            android:text="@string/to_hint"/>

    <Spinner
            android:id="@+id/year_to"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/price_any_year_spinner_size"
            android:gravity="center"
            android:layout_height="wrap_content"/>
</RelativeLayout>